---
import { Container, FeatureCard } from '@littlesticks/odyssey-theme-components';
import ProfileCard from '../components/cards/ProfileCard.astro';
import Layout from '../layouts/Page.astro';
import HomeHeroSection from '../components/sections/heros/HomeHeroSection.astro';
const seo = {
	title: 'Tech To Empower',
	description: 'Landing Page #1 | Astro Odyssey Theme',
};
---


<Layout seo={seo}>
	<HomeHeroSection />
	<Container>
		<section class="feature-card__section" id="work">
			<h2>Our Work</h2>
			<div class="feature-card__grid">
				<FeatureCard href="/work/help_in_india" title="STEM in India" imgSrc="/assets/images/home/screenshots/landing-1">
				</FeatureCard>
				<FeatureCard href="/work/neurodiversity_in_first" title="Neurodiversity in FIRST" imgSrc="/assets/images/home/screenshots/neuro/main">
				</FeatureCard>
				<FeatureCard href="/work/diwali_fundraising" title="Diwali Fundraising" imgSrc="/assets/images/home/screenshots/fundraising/main">
				</FeatureCard>
				
				<FeatureCard href="/work/makerspaces_in_jamaica" title="Makerspaces in Jamaica" imgSrc="/assets/images/home/screenshots/landing-2">
				</FeatureCard>

				<!-- <FeatureCard href="/work/tech_renewal_initiative" title="Tech Renewal Initiative" imgSrc="/assets/images/home/screenshots/landing-3">
				</FeatureCard>
				 -->
				
			</div>
		</section>
		<div class="asdsa">

		</div>
	</Container>

	<Container>
		<section class="feature-card__section" id="officiers">
			<h2>Officers</h2>
			<div class="feature-card__grid">
				<ProfileCard role="President" name="Sahas Kumaraguru" imgSrc="/assets/images/home/screenshots/pfps/saucypoo">
				</ProfileCard>
				<ProfileCard role="Media Director" name="Pravith Munipalle" imgSrc="/assets/images/home/screenshots/pfps/pravith">
				</ProfileCard>
				<!-- <ProfileCard role="Tech Lead" name="Ronith Pai" imgSrc="/assets/images/home/screenshots/pic1">
					
				</ProfileCard> -->
				<!-- <ProfileCard role="Secretary" name="Raghav Padmasolala" imgSrc="/assets/images/home/screenshots/landing-3">
				</ProfileCard> -->
			</div>
		</section>
	</Container>
</Layout>

<style>
	.feature-card__section {
		margin: var(--section-margin) auto;
	}
	.feature-card__grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: var(--theme-grid-gap);
	}
	@media (max-width: 768px) {
		.feature-card__grid {
			grid-template-columns: 1fr;
		}
	}
	.asdsa {
		min-height: 100px;

	}
</style>
